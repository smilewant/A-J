<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/carousel_item_guide"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="horizontal"/>
    <TextView
        android:id="@+id/carousel_item_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新增多平台质检案例"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="#FF333333"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/carousel_item_guide"/>

    <TextView
        android:id="@+id/carousel_item_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="2021.03"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="#FF9B9B9B"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintTop_toBottomOf="@id/carousel_item_guide" />

    <ImageView

        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/image_arrow_dsj"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>